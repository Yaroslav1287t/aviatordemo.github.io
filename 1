<div id="multiplier">1.00x</div>
<button id="btn">–í—ã–≤–µ—Å—Ç–∏</button>

<script>
let multiplier = 1.00;
let isCashedOut = false;
let interval;

function startGame() {
  multiplier = 1.00;
  isCashedOut = false;
  document.getElementById('btn').textContent = '–í—ã–≤–µ—Å—Ç–∏';
  interval = setInterval(() => {
    multiplier += Math.random() * 0.1;
    document.getElementById('multiplier').textContent = multiplier.toFixed(2) + 'x';
    if (Math.random() < 0.01) {
      clearInterval(interval);
      if (!isCashedOut) {
        document.getElementById('multiplier').textContent = 'üí• –í—ã–ª–µ—Ç!';
        document.getElementById('btn').textContent = '–°—ã–≥—Ä–∞—Ç—å —Å–Ω–æ–≤–∞';
        isCashedOut = true;
      }
    }
  }, 100);
}

document.getElementById('btn').onclick = () => {
  if (isCashedOut) {
    startGame();
  } else {
    isCashedOut = true;
    clearInterval(interval);
    alert('–¢—ã –≤—ã–≤–µ–ª –ø–æ ' + multiplier.toFixed(2) + 'x!');
    document.getElementById('btn').textContent = '–°—ã–≥—Ä–∞—Ç—å —Å–Ω–æ–≤–∞';
  }
};

startGame();
</script>

